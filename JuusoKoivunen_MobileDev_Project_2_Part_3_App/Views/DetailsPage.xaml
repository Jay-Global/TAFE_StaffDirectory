<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuusoKoivunen_MobileDev_Project_2_Part_3_App.Views.DetailsPage"
             xmlns:viewmodel="clr-namespace:JuusoKoivunen_MobileDev_Project_2_Part_3_App.ViewModels"
             x:DataType="viewmodel:DetailsViewModel"
             Title="Add New Contact"
             BackgroundColor="#941a1d">

    <StackLayout Padding="20">
        <Label Text="First Name:" FontAttributes="Bold"/>
        <Label Text="{Binding CurrentContact.LastName}"/>

        <Label Text="Last Name:" FontAttributes="Bold"/>
        <Label Text="{Binding CurrentContact.FirstName}"/>

         <!--Add more labels for department, role, mobile number, and email--> 

    </StackLayout>
</ContentPage>

