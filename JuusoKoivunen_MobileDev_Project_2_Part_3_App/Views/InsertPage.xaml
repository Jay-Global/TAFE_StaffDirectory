<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuusoKoivunen_MobileDev_Project_2_Part_3_App.InsertPage"
             xmlns:viewmodel="clr-namespace:JuusoKoivunen_MobileDev_Project_2_Part_3_App.ViewModels"
             xmlns:dataForm="clr-namespace:Syncfusion.Maui.DataForm;assembly=Syncfusion.Maui.DataForm"
             xmlns:local="clr-namespace:JuusoKoivunen_MobileDev_Project_2_Part_3_App"
             x:DataType="viewmodel:InsertViewModel"
             Title="Add New Contact"
             BackgroundColor="#941a1d">

    <ContentPage.BindingContext>
        <viewmodel:InsertViewModel/>
    </ContentPage.BindingContext>
             
    <!--Flex layout is used for scalability, still some minor issues regarding mobile size screen-->

    <FlexLayout Direction="Column"
                JustifyContent="SpaceBetween"
                Wrap="NoWrap">
        <FlexLayout Direction="Column"
                    FlexLayout.Order="1"
                    FlexLayout.Basis="20%">
            <Border StrokeThickness="5"
            BackgroundColor="#595959"
            Stroke="#595959">
                <Frame Background="white"
                CornerRadius="5"
                MaximumHeightRequest="120">
                    <Image Source="roi_logo"
                    MaximumWidthRequest="130"
                    MinimumWidthRequest="130"
                    Margin="0"/>
                </Frame>
            </Border>
        </FlexLayout>

        <!--Scroll view is used to ensure that content once enough data can be scrolled-->

        <ScrollView BackgroundColor="White"
                    Margin="5"
                    FlexLayout.Order="2"
                    FlexLayout.Basis="100%">
            <Grid FlexLayout.AlignSelf="Stretch">
                <Image Aspect="AspectFill"
                       Source="roi_wallpaper"
                       Margin="10">
                </Image>
        
    <Grid Padding="0,5,0,5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Text="Contact Form" HeightRequest="50" Background="#6200EE" 
               FontFamily="Roboto" FontSize="18" 
               FontAttributes="Bold" 
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
               Padding="0,5,0,5" TextColor="White"/>

        <Image Source="images.jpeg" Margin="20" Grid.Row="1" HeightRequest="80"/>

        <dataForm:SfDataForm x:Name="dataForm" HeightRequest="550" Grid.Row="2"  
                             DataObject="{Binding ContactCard}" Padding="2,5"
                             GenerateDataFormItem="dataForm_GenerateDataFormItem">
            <dataForm:SfDataForm.DefaultLayoutSettings>
                <dataForm:DataFormDefaultLayoutSettings LabelPosition="Top"/>
            </dataForm:SfDataForm.DefaultLayoutSettings>
        </dataForm:SfDataForm>
        <Button Text="Save" Grid.Row="3" x:Name="saveButton" Background="#6200EE" TextColor="White"
                            HeightRequest="40" VerticalOptions="Center" FontSize="16"
                            CornerRadius="5" WidthRequest="200"
                            HorizontalOptions="Center" />

    </Grid>
            </Grid>

        </ScrollView>
    </FlexLayout>
</ContentPage>
